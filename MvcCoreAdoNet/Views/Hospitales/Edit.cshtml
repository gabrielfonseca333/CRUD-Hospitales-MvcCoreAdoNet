@model Hospital

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-warning text-white">
            <h3 class="mb-0">✏️ Editar Hospital</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="idhospital" class="form-label">ID del Hospital</label>
                    <input type="text" name="idhospital" class="form-control" value="@Model.IdHospital"
                    
                    
                    
                    >
                </div>

                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" name="nombre" class="form-control" value="@Model.Nombre" placeholder="Ingrese el nombre del hospital" required>
                </div>

                <div class="mb-3">
                    <label for="direccion" class="form-label">Dirección</label>
                    <input type="text" name="direccion" class="form-control" value="@Model.Direccion" placeholder="Ingrese la dirección" required>
                </div>

                <div class="mb-3">
                    <label for="telefono" class="form-label">Teléfono</label>
                    <input type="text"  name="telefono" class="form-control" value="@Model.Telefono" placeholder="Ingrese el teléfono" required>
                </div>

                <div class="mb-3">
                    <label for="camas" class="form-label">Número de Camas</label>
                    <input type="number" name="camas" class="form-control" value="@Model.Camas" placeholder="Ingrese el número de camas" required>
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-controller="Hospitales" asp-action="Index" class="btn btn-secondary me-2">⬅ Cancelar</a>
                    <button class="btn btn-warning">💾 Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

<h2 style="color: red">@ViewData["MENSAJE"]</h2>
